@model IEnumerable<TestWeb.Models.ChuDe>

@{
    ViewData["Title"] = "DanhMucChuDe";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h3>Danh mục chủ đề</h3>

<div class="col-lg-12">
    <div class="card">

        <div class="card-body">
            <table class="table">
    <thead>
        <tr>
                        <th scope="col">
                Tên chủ đề
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenChuDe)
            </td>
            <td>
                    <button type="button" class="btn btn-danger mb-1" data-toggle="modal" data-target="#staticModal">
                        delete
                    </button>
            </td>
        </tr>
}
    </tbody>
            </table>
        </div>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="modal fade" id="staticModal" tabindex="-1" role="dialog" aria-labelledby="staticModalLabel" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                       Bạn chắc chắn muốn xóa không ?
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-danger" role="button" asp-action="XoaChuDe" asp-route-maSanPham="@item.MaChuDe">Delete</a>
                </div>
            </div>
        </div>
    </div>
}
