@model IEnumerable<TestWeb.Models.NhaXuatBan>

@{
    ViewData["Title"] = "DanhMucNxb";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h3 >Danh mục nhà xuất bản</h3>

<div class="col-lg-12">
    <div class="card">

        <div class="card-body">
            <table class="table">
    <thead>
        <tr>
                        <th scope="col">
                Tên nhà xuất bản
            </th>
                        <th scope="col">
                Địa chỉ
            </th>
                        <th scope="col">
                Điện thoại
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNxb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                    <a class="btn btn-primary" role="button" asp-action="Edit" asp-route-maSanPham="@item.MaNxb">Edit</a>
                    <a class="btn btn-danger" role="button" asp-action="XoaNxb" asp-route-maSanPham="@item.MaNxb">delete</a>
            </td>
        </tr>
}
    </tbody>
            </table>
        </div>
    </div>
</div>


