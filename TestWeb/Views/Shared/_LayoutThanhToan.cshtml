						</div>
					</div>
					
					<div class="col-md-8 clearfix">
						<div class="shop-menu clearfix pull-right">
							<ul class="nav navbar-nav">
								@{
									var gmailClient = new TestWeb.Models.GmailClient.GmailClient();
									var kh = gmailClient.getEmail();
									var Ten = gmailClient.getName();
									var sosach = gmailClient.getSoSach();
									
								}
								@{
									if (Ten == null)
									{
										<li><a asp-action="Login" asp-controller="LoginClient"><i class="fa fa-user"></i> Tài khoản</a></li>
									}
									else
									{
										<li><a asp-action="DanhMucKhachHang" asp-controller="Home"><i class="fa fa-user"></i> @Ten.ToString()</a></li>
									}
								
								//<li><a href=""><i class="fa fa-user"></i> Account</a></li>
								}
								<li><a  asp-action="Index" asp-controller="Cart"><i class="fa fa-shopping-cart"></i> Giỏ Hàng</a>
									@{
										if (sosach == 0)
										{
										
										}
										else
										{
											<span class='badge badge-warning' id='lblCartCount'> @sosach</span>
										}
									//<span class='badge badge-warning' id='lblCartCount'> 5 </span>
									}
								</li>
								
								
								@{
									if (kh == null)
									{
										<li>@Html.ActionLink("Đăng Ký", "Register", "LoginClient")</li>
										<li>@Html.ActionLink("Đăng nhập", "Login", "LoginClient")</li>
									}
									else
									{
										<li>@Html.ActionLink("Đăng Xuất", "Logout", "LoginClient")</li>
									}
								}

							</ul>
